<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1"
         metadata-complete="false">
<!-- tanaka -->
    <!-- PostgreSQL DataSource -->
    <resource-ref>
        <description>PostgreSQL DataSource</description>
        <res-ref-name>jdbc/postgres</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <!-- LoginExecuteAction 用サーブレット -->
    <servlet>
        <servlet-name>LoginExecute</servlet-name>
        <servlet-class>foodloss.LoginExecuteAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginExecute</servlet-name>
        <url-pattern>/LoginExecute.action</url-pattern>
    </servlet-mapping>

    <!-- メインメニュー用サーブレット -->
    <servlet>
        <servlet-name>MainMenu</servlet-name>
        <servlet-class>tool.ActionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainMenu</servlet-name>
        <url-pattern>/main/Menu.action</url-pattern>
    </servlet-mapping>

    <!-- 商品登録用サーブレット - 削除（@WebServletアノテーションを使用） -->

    <!-- SignupUserAction 用サーブレット -->
    <servlet>
        <servlet-name>SignupUserAction</servlet-name>
        <servlet-class>foodloss.SignupUserAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignupUserAction</servlet-name>
        <url-pattern>/signup_user</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>

