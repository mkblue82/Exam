<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1"
         metadata-complete="false">

    <!-- PostgreSQL DataSource -->
    <resource-ref>
        <description>PostgreSQL DataSource</description>
        <res-ref-name>jdbc/postgres</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <!-- LoginExecuteAction 用サーブレット -->
    <servlet>
        <servlet-name>LoginExecute</servlet-name>
        <servlet-class>tool.ActionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginExecute</servlet-name>
        <url-pattern>/LoginExecute.action</url-pattern>
    </servlet-mapping>

    <!-- メインメニュー用サーブレット -->
    <servlet>
        <servlet-name>MainMenu</servlet-name>
        <servlet-class>tool.ActionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainMenu</servlet-name>
        <url-pattern>/main/Menu.action</url-pattern>
    </servlet-mapping>

    <!-- 商品登録用サーブレット -->
    <servlet>
        <servlet-name>MerchandiseRegisterAction</servlet-name>
        <servlet-class>foodloss.MerchandiseRegisterAction</servlet-class>
        <multipart-config>
            <max-file-size>5242880</max-file-size> <!-- 5MB -->
            <max-request-size>10485760</max-request-size> <!-- 10MB -->
            <file-size-threshold>2097152</file-size-threshold> <!-- 2MB -->
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>MerchandiseRegisterAction</servlet-name>
        <url-pattern>/merchandise_register_store</url-pattern>
    </servlet-mapping>

    <!-- JSPファイルのサーブレットマッピング -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>