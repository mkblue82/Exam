<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1"
         metadata-complete="false">

<!-- tanaka -->

<servlet>
    <servlet-name>FrontController</servlet-name>
    <servlet-class>tool.FrontController</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>FrontController</servlet-name>
    <url-pattern>*.action</url-pattern>
</servlet-mapping>


    <!-- PostgreSQL DataSource -->
    <resource-ref>
        <description>PostgreSQL DataSource</description>
        <res-ref-name>jdbc/postgres</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>



    <!-- メインメニュー用サーブレット -->
    <servlet>
        <servlet-name>MainMenu</servlet-name>
        <servlet-class>tool.ActionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainMenu</servlet-name>
        <url-pattern>/main/Menu.action</url-pattern>
    </servlet-mapping>

    <!-- 商品登録用サーブレット -->
    <servlet>
        <servlet-name>MerchandiseRegisterAction</servlet-name>
        <servlet-class>foodloss.MerchandiseRegisterAction</servlet-class>
        <multipart-config>
            <max-file-size>5242880</max-file-size>
            <max-request-size>10485760</max-request-size>
            <file-size-threshold>2097152</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>MerchandiseRegisterAction</servlet-name>
        <url-pattern>/merchandise_register_store</url-pattern>
    </servlet-mapping>

    <!-- SignupUserAction 用サーブレット -->
    <servlet>
        <servlet-name>SignupUserAction</servlet-name>
        <servlet-class>foodloss.SignupUserAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignupUserAction</servlet-name>
        <url-pattern>/signup_user</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>